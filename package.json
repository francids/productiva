  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "prepare": "husky",
    "web:start": "pnpm --prefix web start",
    "web:build": "pnpm --prefix web build",
    "desktop:start": "concurrently \"pnpm web:start\" \"pnpm --prefix desktop start\"",
    "desktop:build": "pnpm --prefix desktop build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-angular": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "concurrently": "^9.2.0",
    "husky": "^9.1.7"
  }
}
